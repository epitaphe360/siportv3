{
  "name": "siports-platform",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "vite",
    "check-env": "node scripts/check-env.cjs",
    "check-env:legacy": "node scripts/check-env.js",
    "build": "vite build && node scripts/inject-build-version.js",
    "build:scanner": "vite build --config vite.scanner.config.ts && node scripts/rename-scanner.js",
    "lint": "eslint .",
    "preview": "vite preview",
    "build:railway": "npm run build && npm run preview",
    "build:vercel": "npm run build",
    "build:wordpress": "npm run build && node scripts/create-wordpress-plugin.cjs",
    "generate:wordpress": "node scripts/create-wordpress-plugin.cjs",
    "build:mobile": "npm run build && npx cap build",
    "metrics-server": "node server/metrics-server.js",
    "exhibitors-server": "node server/exhibitors-server.js",
    "seed:templates": "npx tsx scripts/seed-site-templates.ts",
    "mobile:init": "npx @capacitor/cli create",
    "mobile:add-ios": "npx cap add ios",
    "mobile:add-android": "npx cap add android",
    "mobile:sync": "npx cap sync",
    "mobile:open-ios": "npx cap open ios",
    "mobile:open-android": "npx cap open android",
    "test": "vitest",
    "test:e2e": "node scripts/wait-for-server.cjs && playwright test --project=chromium",
    "test:e2e:functional": "playwright test functional-tests-with-existing-accounts.spec.ts",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:all": "npm run test:unit && npm run test:e2e",
    "test:auth": "playwright test tests/e2e/auth.spec.ts",
    "test:nav": "playwright test tests/e2e/navigation.spec.ts",
    "test:events": "playwright test tests/e2e/events.spec.ts",
    "test:appointments": "playwright test tests/e2e/appointments.spec.ts",
    "test:unit": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "setup:test-accounts": "node scripts/create-test-accounts.mjs",
    "setup:test-users": "node scripts/create-test-users.js",
    "list:test-accounts": "powershell scripts/list-test-accounts.ps1",
    "apply-sql": "node scripts/apply_sql.cjs",
    "verify-db": "node scripts/verify_db.cjs",
    "run:combined-sql": "node scripts/run_combined_sql.cjs",
    "test:concurrency": "node --experimental-top-level-await scripts/concurrent_book_test.mjs",
    "import:exhibitors": "node scripts/run_import_exhibitors.mjs",
    "db:quick-check": "node scripts/db_quick_check.mjs",
    "diagnose:payments": "node scripts/diagnose-payment-storage.mjs",
    "ai-agent": "node server/ai-agent/index.mjs"
  },
  "dependencies": {
    "@capacitor/ios": "^8.0.0",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@google-cloud/firestore": "^7.11.3",
    "@headlessui/react": "^1.7.19",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^3.10.0",
    "@paypal/react-paypal-js": "^8.7.0",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@stripe/react-stripe-js": "^2.8.1",
    "@stripe/stripe-js": "^4.9.0",
    "@supabase/supabase-js": "^2.58.0",
    "@types/dompurify": "^3.0.5",
    "bcryptjs": "^3.0.2",
    "cheerio": "^1.0.0-rc.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dompurify": "^3.3.1",
    "express": "^4.18.2",
    "firebase": "^12.2.1",
    "framer-motion": "^10.16.16",
    "html2canvas": "^1.4.1",
    "html5-qrcode": "^2.3.8",
    "i18next": "^23.16.8",
    "i18next-browser-languagedetector": "^8.2.0",
    "jsdom": "^27.0.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.344.0",
    "node-fetch": "^2.6.12",
    "pg": "^8.16.3",
    "qrcode": "^1.5.4",
    "qrcode.react": "^4.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.62.0",
    "react-hot-toast": "^2.6.0",
    "react-i18next": "^15.7.4",
    "react-router-dom": "^6.20.1",
    "recharts": "^2.15.4",
    "sonner": "^2.0.7",
    "stripe": "^17.4.0",
    "tailwind-merge": "^2.6.0",
    "zod": "^3.25.76",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@capacitor/android": "^8.0.0",
    "@capacitor/cli": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@eslint/js": "^9.38.0",
    "@playwright/test": "^1.57.0",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^4.0.15",
    "archiver": "^7.0.1",
    "autoprefixer": "^10.4.18",
    "dotenv": "^17.2.3",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "fs-extra": "^11.3.2",
    "globals": "^15.9.0",
    "linkedom": "^0.18.12",
    "node-html-parser": "^7.0.1",
    "patch-package": "^8.0.0",
    "postcss": "^8.4.35",
    "supabase": "^2.48.3",
    "tailwindcss": "^3.4.1",
    "terser": "^5.44.0",
    "typescript": "5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^6.0.0",
    "vitest": "^4.0.15"
  }
}

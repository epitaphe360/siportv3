{
  "name": "siports-platform",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "check-env": "node scripts/check-env.cjs",
    "check-env:legacy": "node scripts/check-env.js",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "build:railway": "npm run build && npm run preview",
    "build:vercel": "npm run build",
    "build:wordpress": "npm run build && node scripts/create-wordpress-plugin.cjs",
    "generate:wordpress": "node scripts/create-wordpress-plugin.cjs",
    "build:mobile": "npm run build && npx cap build",
    "metrics-server": "node server/metrics-server.js",
    "exhibitors-server": "node server/exhibitors-server.js",
    "mobile:init": "npx @capacitor/cli create",
    "mobile:add-ios": "npx cap add ios",
    "mobile:add-android": "npx cap add android",
    "mobile:sync": "npx cap sync",
    "mobile:open-ios": "npx cap open ios",
    "mobile:open-android": "npx cap open android",
    "test:e2e": "node scripts/wait-for-server.cjs && playwright test --project=chromium",
    "apply-sql": "node scripts/apply_sql.cjs",
    "verify-db": "node scripts/verify_db.cjs",
    "run:combined-sql": "node scripts/run_combined_sql.cjs",
    "test:concurrency": "node --experimental-top-level-await scripts/concurrent_book_test.mjs",
    "import:exhibitors": "node scripts/run_import_exhibitors.mjs",
    "db:quick-check": "node scripts/db_quick_check.mjs",
    "ai-agent": "node server/ai-agent/index.mjs"
  },
  "dependencies": {
    "@google-cloud/firestore": "^7.11.3",
    "@headlessui/react": "^1.7.19",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^3.10.0",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@supabase/supabase-js": "^2.58.0",
    "bcryptjs": "^3.0.2",
    "cheerio": "^1.0.0-rc.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "firebase": "^12.2.1",
    "framer-motion": "^10.16.16",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.344.0",
    "node-fetch": "^2.6.12",
    "pg": "^8.16.3",
    "qrcode.react": "^4.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.62.0",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^6.20.1",
    "recharts": "^2.15.4",
    "sonner": "^2.0.7",
    "tailwind-merge": "^2.6.0",
    "zod": "^3.25.76",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@playwright/test": "^1.55.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "archiver": "^7.0.1",
    "autoprefixer": "^10.4.18",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "fs-extra": "^11.3.2",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^7.1.7"
  }
}

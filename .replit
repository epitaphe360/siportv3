modules = ["nodejs-20", "php-8.2", "web", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[deployment]
deploymentTarget = "autoscale"
run = ["npm", "run", "preview"]
build = ["npm", "run", "build"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Auth Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend Development Server"

[[workflows.workflow]]
name = "Auth Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server/auth-server.js"
waitForPort = 3003

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Frontend Development Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 3003
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 5000
